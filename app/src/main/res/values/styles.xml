<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="floatingActionButtonStyle">@style/Widget.Design.FloatingActionButton</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorBlack</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>
    
    <style name="ShapeAppearance.Notes.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">9dp</item>
        <item name="cornerSizeBottomRight">9dp</item>
        <item name="cornerSizeTopLeft">9dp</item>
        <item name="cornerSizeTopRight">40dp</item>
    </style>

    <style name="PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>
    
    <style name="FontStyleRobotoRegular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

</resources>
