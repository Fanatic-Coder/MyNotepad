<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="floatingActionButtonStyle">@style/Widget.Design.FloatingActionButton</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorBlack</item>
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.MyNotie.Subtitle1</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.MyNotie.Subtitle1</item>
        <item name="popupMenuBackground">@drawable/popup_menu_background</item>
    </style>
    
    <style name="ShapeAppearance.Notes.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">9dp</item>
        <item name="cornerSizeBottomRight">9dp</item>
        <item name="cornerSizeTopLeft">9dp</item>
        <item name="cornerSizeTopRight">40dp</item>
    </style>

    <style name="ShapeAppearance.NoteEdittext.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">9dp</item>
        <item name="cornerSizeBottomRight">9dp</item>
        <item name="cornerSizeTopLeft">9dp</item>
        <item name="cornerSizeTopRight">40dp</item>
    </style>

    <style name="TextAppearance.MyNotie.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    
    <style name="FontStyleRobotoRegular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

</resources>
