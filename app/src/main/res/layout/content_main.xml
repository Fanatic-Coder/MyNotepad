<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <!-- A group with all the buttons and lines. Full bar_buttons -->
    <RelativeLayout
        android:id="@+id/bar_buttons"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_bar_buttons_height"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true">

        <!-- Top line -->
        <View
            android:id="@+id/line1"
            android:layout_width="@dimen/line_width"
            android:layout_height="@dimen/line_height"
            android:layout_alignParentTop="true"
            android:background="@color/color_line"
            android:fadingEdge="vertical"
            android:gravity="top"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textSize="22sp" />

        <!-- Bottom Line -->
        <View
            android:id="@+id/line2"
            android:layout_width="@dimen/line_width"
            android:layout_height="@dimen/line_height"
            android:layout_alignParentBottom="true"
            android:background="@color/color_line"
            android:fadingEdge="vertical"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textSize="22sp" />

        <!-- A group or Layout of only the buttons -->
        <RelativeLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <!-- A button that clears all the text in note -->
            <Button
                android:id="@+id/clearText"
                android:layout_width="@dimen/bar_buttons_width"
                android:layout_height="@dimen/bar_buttons_height"
                android:onClick="clearTextButton"
                android:text="@string/clear_text"
                android:textSize="@dimen/text_size_button" />

            <!-- A button that saves the note -->
            <Button
                android:id="@+id/saveNote"
                android:layout_width="@dimen/bar_buttons_width"
                android:layout_height="@dimen/bar_buttons_height"
                android:layout_toEndOf="@id/clearText"
                android:layout_toRightOf="@+id/clearText"
                android:onClick="saveNoteButton"
                android:text="@string/save_note_text"
                android:textSize="@dimen/text_size_button" />

            <!-- A button that opens the Layout/Activity for the notes -->
            <Button
                android:id="@+id/noteManager"
                android:layout_width="@dimen/bar_buttons_width"
                android:layout_height="@dimen/bar_buttons_height"
                android:layout_toEndOf="@id/saveNote"
                android:layout_toRightOf="@+id/saveNote"
                android:onClick="NoteManager"
                android:text="@string/note_manager_text"
                android:textSize="@dimen/text_size_button" />

        </RelativeLayout>
    </RelativeLayout>

    <!-- The actual main text to write in Note -->
    <view
        android:id="@+id/Write_Note"
        class="com.example.fanatic_coder.mynotepad.MainActivity$LineEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar_buttons"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/background_write_text"
        android:ems="10"
        android:gravity="start"
        android:paddingStart="@dimen/write_text_padding"
        android:paddingEnd="@dimen/write_text_padding"
        android:hint="@string/write_text_hint"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:textColor="@color/color_write_text"
        tools:targetApi="o" />

</RelativeLayout>